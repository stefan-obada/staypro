#:kivy 1.11.1

<MenuButton@HoverButton>:
    background_color: 0,0,0,0
    background_normal: ""


    back_active_color: 0.8, 0.8, 0.8, 0.7
    back_inactive_color: 0.8, 0.8, 0.8, 0.9

    border_radius: 14
    bold: False if self.state == 'normal' else True

    color: 0.12, 0.328, 0.552, 1    # Text color

    canvas.before:
        Color:
            rgba: self.back_active_color if self.hovered else self.back_inactive_color

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.border_radius]



<LoginLayout>:
    canvas:
        Color:
            rgba: 0.12, 0.328, 0.552, 1
        Rectangle:
            pos: self.pos
            size: self.size

    name: "login"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        TextInput:
            id: login_user
            hint_text: "USER"
            multiline: False
            write_tab: False

        TextInput:
            id: login_pwd
            hint_text: "PASS"
            multiline: False
            password: True
            write_tab: False

        BoxLayout:
            padding: 3

            MenuButton:
                text: "LogIn"
                on_release: root.check_login()

<MainLayout>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 4

        canvas:
            Color:
                rgba: 0.12, 0.328, 0.552, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:

            orientation: "vertical"

            Label:
                size_hint: 1, 1
                text: "Hello, !"
                id: main_welcome

            TextInput:
                size_hint: 0.85, .9
                pos_hint: {"center_x": 0.5}
                id: main_activity
                halign: "center"
                hint_text: "What are you doing now?"
                multiline: False

        BoxLayout:
            padding: 9
            spacing: 5
            orientation: "horizontal"

            MenuButton:
                id: main_start
                text: "Start"
                on_release: root.start_activity()

            MenuButton:
                id: main_history
                text: "History"
                on_release: root.open_history()


<RuntimeLayout>:
    name: "runtime"

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 5

        canvas:
            Color:
                rgba: 0.12, 0.328, 0.552, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "horizontal"

            Label:
                id: runtime_current_activity
                valign: "center"
                halign: "center"
                text_size: self.size
                multiline: True
                text: ""
                bold: True

            Label:
                id: runtime_current_time
                valign: "center"
                halign: "center"
                text:""
                bold: True

        BoxLayout:
            padding: 5
            spacing: 5
            orientation: "horizontal"

            MenuButton:
                id: runtime_pause_btn
                text: "PAUSE"
                on_release: root.pause()

            MenuButton:
                text: "STOP"
                on_release: root.stop()




