#:kivy 1.11.1

<LoginLayout>:
    canvas:
        Color:
            rgba: 0.12, 0.328, 0.552, 1
        Rectangle:
            pos: self.pos
            size: self.size

    name: "login"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        TextInput:
            id: login_user
            hint_text: "USER"
            multiline: False
            write_tab: False

        TextInput:
            id: login_pwd
            hint_text: "PASS"
            multiline: False
            password: True
            write_tab: False

        Button:
            text: "LogIn"
            on_press: root.check_login()
            background_color:

<MainLayout>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: 15

        canvas:
            Color:
                rgba: 0.12, 0.328, 0.552, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Hello, !"
            id: main_welcome

        TextInput:
            id: main_activity
            hint_text: "Activity"
			multiline: False

        Button:
            id: main_start
            text: "Start"
            on_press: root.start_activity()

        Button:
            id: main_history
            text: "History"
            on_press: root.open_history()


<RuntimeLayout>:
    name: "runtime"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        canvas:
            Color:
                rgba: 0.12, 0.328, 0.552, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: runtime_current_activity
            text: ""

        Label:
            id: runtime_current_time
            text:""

        Button:
            id: runtime_pause_btn
            text: "PAUSE"
            on_press: root.pause()

        Button:
            text: "STOP"
            on_press: root.stop()




