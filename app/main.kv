#:kivy 1.11.1
ScreenManager:

    LoginLayout:
    MainLayout:
    RuntimeLayout:

<LoginLayout>:
    canvas:
        Color:
            rgba: .6, .5, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size

    name: "login"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        TextInput:
            id: user
            hint_text: "USER"
            multiline: False

        TextInput:
            id: pwd
            hint_text: "PASS"
            multiline: False
            password: True

        Button:
            text: "LogIn"
            on_release: root.check_login(user.text, pwd.text)

<MainLayout>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        canvas:
            Color:
                rgba: .6, .5, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "StayPro"

        TextInput:
            id: activity
            hint_text: "Activity"

        Button:
            id: "btn"
            text: "Start"
            on_release: root.start_activity(activity.text)



<RuntimeLayout>:
    name: "runtime"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        canvas:
            Color:
                rgba: .6, .5, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        text: "Activity"




