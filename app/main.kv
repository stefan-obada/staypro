#:kivy 1.11.1
ScreenManager:

    LoginLayout:
    MainLayout:
    RuntimeLayout:

<LoginLayout>:
    canvas:
        Color:
            rgba: .6, .5, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size

    name: "login"

    BoxLayout:
        orientation: "vertical"
        padding: 20

        TextInput:
            hint_text: "USER"
            id: user

        TextInput:
            hint_text: "PASS"
            id: pass
            password: True

        Button:
            text: "LogIn"
            on_release: root.check_login()

<MainLayout>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
#        size_hint: 0.8, 0.5
        padding: 20

        canvas:
            Color:
                rgba: .6, .5, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "StayPro"

        TextInput:
            hint_text: "Activity"

        Button:
            text: "Start"



<RuntimeLayout>:




